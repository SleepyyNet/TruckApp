<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <GridView
        android:id="@+id/dialog_colours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/colour_grid_spacing"
        android:horizontalSpacing="@dimen/colour_grid_spacing"
        android:paddingLeft="@dimen/colour_grid_spacing"
        android:paddingRight="@dimen/colour_grid_spacing"
        android:gravity="center" />

</LinearLayout>