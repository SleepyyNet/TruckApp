<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/server_name"
        android:layout_alignParentTop="true"
        android:textSize="17sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/game_name"
        android:layout_toRightOf="@+id/server_name"
        android:gravity="center_vertical"
        android:textColor="@android:color/secondary_text_dark"
        android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1.6sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_of_players"
        android:layout_below="@+id/server_name"
        />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/number_of_players_progressbar"
        android:layout_below="@+id/number_of_players"
        />

    <cz.uruba.ets2mpcompanion.views.ServerStatusTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/server_status"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        />

</RelativeLayout>